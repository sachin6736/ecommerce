<%- include('header') %>
<style>

        .container {
            background-color: #fff;
            margin-top: 50px;
        }
/* 
        .product-image img {
            width: 150px ;
            height: 100px;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        } */
        .img-fluid
        {
            width: 100px;
            height: 100px;
        }
        .img-fluid:hover{
          transform: scale(1.3);
          transition-duration: 0.1s;
        }
        .product-details {
            padding: 20px;
            background: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
        }
        .product-name {
            font-size: 2em;
            margin-bottom: 20px;
            color: #333;
        }
        .product-description {
            font-size: 1.2em;
            margin-bottom: 15px;
            color: #666;
        }
        .product-price, .product-offer-price, .product-stock, .product-brand {
            font-size: 1.1em;
            margin-bottom: 10px;
            color: #444;
        }
        .product-price {
            font-weight: bold;
            color: #28a745;
        }
        .product-offer-price {
            font-weight: bold;
            color: #dc3545;
        }
        a{
            text-decoration: none;
            color: blue;
        }
    
</style>

<div class="container mt-5">
    <div class="row">
        <div class="images">
            <div class="product-image">
             <img src="/Product_images/<%= Product.images[0] %>" alt="" class="img-fluid">
             <img src="/Product_images/<%= Product.images[1] %>" alt=""class="img-fluid">
             <img src="/Product_images/<%=Product.images[2] %>" alt="" class="img-fluid">
             <img src="/Product_images/<%= Product.images[3] %>" alt="" class="img-fluid">
            </div>
        </div>
        <div class="col-md-8">
            <div class="product-details">
                <h2 class="product-name"><%= Product.name %></h2>
                <p class="product-description"><%= Product.description %></p>
                <% Categories.forEach(category => { %>
                  <%  if(Product.category_Id.toString() === category._id.toString()){%>
                    <p class="product-price">Category: <%=category.name %></p>
                    <%}%>
                <% }) %>                
                <% SubCategories.forEach(subcategory => { %>
                    <%  if(Product.sub_category_Id.toString() === subcategory._id.toString()){%>
                      <p class="product-price">Sub Category: <%= subcategory.name %></p>
                      <%}%>
                  <% }) %>
                <p class="product-price">Price: <%= Product.price %></p>
                <p class="product-stock">Stock: <%= Product.stock %></p>
                <p class="product-brand">Brand: <%= Product.brand %></p>   
                 <a href="/products">Back to products</a>

            </div>

        </div>
    </div>
</div>



<%- include('footer') %>
